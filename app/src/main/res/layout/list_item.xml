<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlItem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"


        >

        <TextView
            android:id="@+id/tvColor"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:filterTouchesWhenObscured="true"
            android:background="@drawable/circle_vital"
            android:gravity="center"

            android:textColor="#FFFFFF"

            />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tvColor"


            android:rotation="180">


            <TextView
                android:id="@+id/rlv2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:filterTouchesWhenObscured="true"
                android:background="@drawable/traingle"/>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="#f4f4f4"></View>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/rl1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:filterTouchesWhenObscured="true"
                android:gravity="center"
                android:text="240/196"
                android:textColor="#000"


                />

            <TextView
                android:id="@+id/tvMaxMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:filterTouchesWhenObscured="true"
                android:text="minimum"



                />
        </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imgDelete"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:filterTouchesWhenObscured="true"
        android:text="TextView"
      />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="12dp"

        android:layout_marginRight="12dp"

        android:visibility="gone"
        />

</LinearLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />
</LinearLayout>